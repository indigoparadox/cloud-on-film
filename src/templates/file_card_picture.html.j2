
<div class="col px-0 card bg-secondary{{ classes }}">

    <div class="px-0 py-0 mx-auto libraries-thumbnail-wrapper" data-src="{{ url_for( 'libraries.cloud_plugin_preview', file_id=id ) }}">

        <input type="checkbox" class="item-checkbox float-right w-25 form-control" name="select-item-{{ id }}"
            id="select-item-{{ id }}" style="display: none" />
            
        <a href="{{ fullsize_page }}" class="thumbnail"
            data-fullsize="{{ url_for( 'libraries.cloud_plugin_fullsize', file_id=id ) }}">
            <noscript>
                <img
                    class="img-responsive libraries-thumbnail"
                    src="{{ url_for( 'libraries.cloud_plugin_preview', file_id=id ) }}"
                    alt="{{ name }}" />
            </noscript>
        </a>
    </div> <!-- /libraries-thumbnail-wrapper -->

    <div class="container-fluid d-flex flex-column flex-grow-1">

        <div class="card-body container-fluid d-flex flex-column flex-grow-1 w-100 px-0">

            <!-- body text -->
            <h6 class="card-title d-flex flex-column">{{ name }}</h6>
            <p class="card-text d-flex flex-column flex-grow-1">
                {% if comment %}
                {{ comment }}
                {% endif %}
            </p>

            <!-- button bar -->
            <div class="d-flex flex-column">
                <div class="d-flex">
                    {% if nsfw %}
                    <small class="text-dark m-1 badge badge-danger nsfw">NSFW</small>
                    {% endif %}
                </div>
                <div class="d-flex">
                    <small class="text-bright m-1 badge badge-secondary dimensions">{{ width }}x{{ height }}</small>
                    {% if aspect %}
                    <small class="text-bright m-1 badge badge-success aspect-ratio">{{ aspect }}</small>
                    {% endif %}
                </div>
                <small class="rating mt-2 text-nowrap">
                {% for r in range( rating ) %}
                    <a href="#" class="star star-on star-{{ r }}"></a>
                {% endfor %}
                {% for r in range( 5 - rating ) %}
                    <a href="#" class="star star-off star-{{ r }}"></a>
                {% endfor %}
                </small>
                    
            </div>

        </div> <!-- /card-body -->

    </div>
</div> <!-- /card -->
